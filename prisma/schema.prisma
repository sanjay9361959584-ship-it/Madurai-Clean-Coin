generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // ADDED for real auth
  role      String   @default("CITIZEN") // CITIZEN or ADMIN
  points    Int      @default(0)
  streak    Int      @default(0)
  reports   Report[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  imageUrl      String
  location      String
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  aiConfidence  Float?
  segregation   String?  // WET, DRY, UNKNOWN
  areaId        String?
  area          Area?    @relation(fields: [areaId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Area {
  id               String   @id @default(uuid())
  name             String   @unique
  cleanlinessScore Float    @default(0) // Higher means cleaner
  reports          Report[]
}
